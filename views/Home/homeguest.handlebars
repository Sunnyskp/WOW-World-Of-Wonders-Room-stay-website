{{#each errors}}
<div class="error"> {{this}} </div>
{{/each}}
<div class="form-row text-white bg-dark">
    <div class="col-8">
        <div class="jumbotron text-white bg-dark">
            <h1 class="display-6">Welcome to the World of Wonders, "Stayin' Alive..!"</h1>
            <p class="lead">Beautiful, Inspirational Spaces.
                Browse our Most Popular Rentals...</p>
            <div class="dropdown-divider"></div>
            <nav class="navbar navbar-dark text-white bg-dark mx-auto">
                <form method="GET" action="/guest_room_list" class="form-inline col-12 ">
                    <div class="form-row col-8">
                        <select id="inputState" class="form-control col">
                            <option selected>Select Your City...</option>
                            <option> <a class="dropdown-item" href="#">Toronto</a></option>
                            <option> <a class="dropdown-item" href="#">Mississauga</a></option>
                            <option> <a class="dropdown-item" href="#">Brampton</a></option>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-info col-4">Search</button>
                </form>
            </nav>
        </div>
    </div>
    <div class="col-4 bg-dark">
        <form method="POST" action="/user" class="px-4 py-2">
            <div class="form-group">
                <label>Username</label>
                <input type="text" name="username" id="username" value="{{username}}" class="form-control"
                    placeholder="Enter Username">
            </div>
            <div class="form-group">
                <label>Password</label>
                <input style="margin-bottom: 2em;" type="password" name="password" class="form-control"
                    placeholder="Enter Password">
            </div>
            <button type="submit" class="btn btn-outline-info btn-block btn-sm">Sign
                in</button>
        </form>
        <form class="px-4 py-1" method="GET" action="/user_signup">
            <button type="submit" class="btn btn-outline-info btn-sm btn-block">New
                to WOW ? Signup</button>
        </form>
        <form class="px-4 py-1" method="GET" action="/admin_login">
            <button type="submit" class="btn btn-outline-danger btn-sm btn-block">Sign in as Admin</button>
        </form>
    </div>
</div>